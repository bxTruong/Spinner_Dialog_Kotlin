<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_12sdp"
            app:cardElevation="@dimen/_12sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/nbDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@color/design_default_color_primary"
                        app:np_selectedTextColor="@color/design_default_color_primary"
                        app:np_selectedTextSize="@dimen/_18sdp"
                        app:np_textSize="@dimen/_14sdp" />

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/nbMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@color/design_default_color_primary"
                        app:np_selectedTextColor="@color/design_default_color_primary"
                        app:np_selectedTextSize="@dimen/_18sdp"
                        app:np_textSize="@dimen/_14sdp" />

                    <com.shawnlin.numberpicker.NumberPicker
                        android:id="@+id/nbYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:np_dividerColor="@color/design_default_color_primary"
                        app:np_selectedTextColor="@color/design_default_color_primary"
                        app:np_selectedTextSize="@dimen/_18sdp"
                        app:np_textSize="@dimen/_14sdp" />

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:onClick="selectedDate"
                    android:text="Chá»n" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>